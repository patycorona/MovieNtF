<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.profile.views.HomeProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_name_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="@dimen/txt_size_35sp"
        android:layout_marginTop="@dimen/space_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_editar"
        android:layout_width="@dimen/space_30dp"
        android:layout_height="@dimen/space_30dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/ic_edit"
        android:layout_marginTop="@dimen/space_20dp"
        android:layout_marginEnd="@dimen/space_20dp"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_quien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_quien"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/txt_size_18sp"
        android:layout_marginTop="@dimen/space_60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_name_app"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0dp"
        android:layout_marginStart="@dimen/space_60dp"
        android:layout_marginTop="@dimen/space_20dp"
        android:layout_marginEnd="@dimen/space_60dp"
        android:layout_marginBottom="@dimen/space_40dp"
        android:padding="@dimen/space_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quien"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/fragment_profile_item" />

</androidx.constraintlayout.widget.ConstraintLayout>