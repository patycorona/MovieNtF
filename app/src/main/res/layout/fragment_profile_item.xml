<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:id="@+id/layout_item_profile"
    android:elevation="@dimen/space_10dp"
    android:layout_margin="@dimen/space_10dp"
    tools:context=".ui.profile.views.ProfileItemFragment">

    <TextView
        android:id="@+id/tv_id_profile"
        android:visibility="gone"
        android:layout_marginStart="@dimen/space_8dp"
        android:layout_marginEnd="@dimen/space_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:maxLines="@integer/lines_2"
        android:gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/space_120dp"
        android:layout_height="@dimen/space_120dp"
        android:layout_marginTop="@dimen/space_16dp"
        android:layout_marginStart="@dimen/space_20dp"
        android:layout_marginEnd="@dimen/space_20dp"
        android:src="@drawable/profile1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_14sp"
        android:textColor="@color/white"
        tools:text="amanda patricia"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/space_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>